<launch>
  <master auto="start"/>
  <param name="/use_sim_time" value="true"/>

  <!-- Run the Map Server -->
  <node name="map_server" pkg="map_server" type="map_server" args="map.yaml" respawn="false" />

  <!-- Run the Stage Simulator -->
  <node pkg="stage_ros" type="stageros" name="stageros" args="store.world" respawn="false" >
    <remap from="base_scan" to="scan"/> 
    <param name="base_watchdog_timeout" value="0.01"/>
  </node>

</launch>
